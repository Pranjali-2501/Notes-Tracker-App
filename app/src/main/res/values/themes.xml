<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AddTaskActivity" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#F3B5B9</item>
        <item name="colorPrimaryVariant">#F3B5B9</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">#F3B5B9</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>